<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/job_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="服务专员"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/job_salary_range_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="2k-3k"
            android:textSize="17sp"
            android:textColor="@color/material_orange_500"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/job_city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沈阳"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/material_textBlack_dividers"/>

        <TextView
            android:id="@+id/job_district_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="皇姑"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/material_textBlack_dividers"/>

        <TextView
            android:id="@+id/job_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/material_textBlack_dividers"/>

        <TextView
            android:id="@+id/job_age_range_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18-25岁"
            android:layout_margin="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:tint="@color/material_cyan_300"
            app:srcCompat="@drawable/ic_enterprise"/>

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="辽宁省手语帮科技有限公司"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>